---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/portfolio/Experience.astro";
import HomeIndex from "../components/portfolio/HomeIndex.astro";
import Contact from "../components/portfolio/Contact.astro";
import ListPosts from "../components/portfolio/ListPosts.astro";
import Heading from "../components/ui/Heading.astro";
import BlogIndex from "../components/portfolio/BlogIndex.astro"
import { Icon } from "astro-icon/components";
const pageTitle = "arlough.dev | Arlo Hollingshad";
const description = "Is a modern, minimalist template crafted for developers and digital creatives.";
const ogimage = {
  url: "/images/imagedefault.webp",
  alt: "Screenshot of a web portfolio with a modern and dark design. Featuring Arlo Hollingshad, a Network Security Architect with 8 years of experience, highlighting his passion for security and automation. Includes contact sections, projects, and a technology stack with a variety of security technologies."
};
---

<Layout pageTitle={pageTitle} description={description} ogimage={ogimage}>
  <HomeIndex />
  <!-- <BlogIndex /> -->
  <section class="bg-linear-to-t dark:from-[#0e0e10] from-white from-50% to-transparent to-100% scroll-m-16" id="projects">
    <div class="flex flex-col gap-8 max-w-7xl mx-auto">
      <ListPosts>
        <div class="flex gap-4 items-center justify-center text-center">
          <Icon class="text-3xl dark:text-white text-blacktext" name="code" />
          <Heading textGradient="Recent Blog Posts" level={2}/>
        </div>
        <p class="z-2 text-center mx-auto text-lg max-xl:text-base max-w-2xl dark:text-gray-200 text-blacktext my-6 leading-6 font-medium">
        I love 
        <b class=" bg-linear-to-r  from-sky-500 to-surf-500 dark:from-sky-300 dark:to-surf-200 text-transparent bg-clip-text">
          turning ideas into real projects.
        </b>
        <br /> 
          Here I show you some of the <b class="d bg-linear-to-r  from-sky-500 to-surf-500 dark:from-sky-300 dark:to-surf-200 text-transparent bg-clip-text">developments</b> 
          I've worked on, applying technology, design, and lots of creativity.
        <b class=" bg-linear-to-r  from-sky-500 to-surf-500 dark:from-sky-300 dark:to-surf-200 text-transparent bg-clip-text">Check them out!</b>
        </p>
      </ListPosts>
    </div>
  </section>


<Contact />
</Layout>
