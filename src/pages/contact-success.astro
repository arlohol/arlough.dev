---
import Layout from "../layouts/Layout.astro";
import Heading from "../components/ui/Heading.astro";
import Button from "../components/ui/Button.astro";
import { Icon } from "astro-icon/components";

const pageTitle = "Message Sent Successfully | Arlough.dev";
const description = "Thank you for reaching out! Your message has been received and I'll get back to you soon.";
---

<Layout pageTitle={pageTitle} description={description}>
  <main class="min-h-screen bg-surf-50/5 dark:bg-[#0E0E11] flex items-center justify-center">
    <div class="mx-auto max-w-2xl px-8 py-24 text-center">
      <!-- Success Icon -->
      <div class="mb-8">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-mint-500 to-riptide-500 rounded-full mb-6 animate-pulse">
          <Icon name="paperplane" class="w-10 h-10 text-white" />
        </div>
      </div>

      <!-- Success Message -->
      <div class="space-y-6 mb-8">
        <Heading 
          text="Message Sent" 
          textGradient="Successfully!"
          level={1}
          className="text-center"
        />
        
        <div class="space-y-4">
          <p class="text-lg text-surf-600 dark:text-surf-300 leading-relaxed">
            Thank you for reaching out! Your message has been received and I'll get back to you as soon as possible.
          </p>
          
          <p class="text-surf-500 dark:text-surf-400">
            I typically respond within <strong class="text-riptide-500">24-48 hours</strong>. 
            In the meantime, feel free to explore my blog or check out my latest projects.
          </p>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <Button
          link="/"
          text="Back to Home"
          iconName="rocket"
          variant="default"
          ariaLabel="Return to homepage"
        />
        
        <Button
          link="/blog"
          text="Read My Blog"
          iconName="markdown"
          variant="dark"
          ariaLabel="Visit the blog"
        />
      </div>

      <!-- Additional Info -->
      <div class="mt-12 p-6 bg-white dark:bg-surf-900/50 rounded-xl border border-surf-100 dark:border-surf-800">
        <h3 class="text-lg font-semibold dark:text-white text-blacktext mb-3">
          What happens next?
        </h3>
        
        <div class="space-y-3 text-sm text-surf-600 dark:text-surf-400">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-2 h-2 bg-riptide-500 rounded-full mt-2"></div>
            <p>I'll review your message and understand your needs</p>
          </div>
          
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-2 h-2 bg-mint-500 rounded-full mt-2"></div>
            <p>You'll receive a personalized response within 24-48 hours</p>
          </div>
          
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-2 h-2 bg-gold-500 rounded-full mt-2"></div>
            <p>We can schedule a call or continue the conversation via email</p>
          </div>
        </div>
      </div>

      <!-- Contact Info Reminder -->
      <div class="mt-8 text-sm text-surf-500 dark:text-surf-500">
        <p>
          Need to reach me urgently? Find me on 
          <a 
            href="https://linkedin.com/in/your-profile" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-riptide-500 hover:text-riptide-600 dark:hover:text-riptide-400 underline transition-colors"
          >
            LinkedIn
          </a> 
          or check out my work on 
          <a 
            href="https://github.com/arlohol" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-riptide-500 hover:text-riptide-600 dark:hover:text-riptide-400 underline transition-colors"
          >
            GitHub
          </a>.
        </p>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Add a subtle floating animation to the success icon */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-pulse {
    animation: float 3s ease-in-out infinite;
  }
</style>