---
interface Props {
    text?: string;
    textGradient?: string;
    level?: 1 | 2 | 3;
    className?: string;
}

const { text = "", textGradient = "", level = 1, className = "" } = Astro.props;

const Tag = `h${level}`;
---

<Tag class:list={[
  "font-extrabold",
  level === 1 && "text-5xl max-xl:text-4xl",
  level === 2 && "text-4xl max-md:text-3xl",
  level === 3 && "text-3xl max-md:text-xl",
  "dark:text-white text-blacktext",
  className
]}>

    {text && (
        <>
            {text}
            {textGradient && " "}
        </> 
    )}
    {textGradient && (
        <b
            class:list={[
                "bg-linear-to-r from-sky-500 to-surf-400 dark:from-sky-500 dark:to-surf-500 text-transparent bg-clip-text",
                level === 1 
            ]}
        >{textGradient}</b>
    )}
</Tag> 